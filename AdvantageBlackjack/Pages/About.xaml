<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AdvantageBlackjack.Pages"
             x:Class="AdvantageBlackjack.About"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#707060">

    <Grid>

        <!-- 10 Rows -->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- 5 Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Back Image -->
        <Image x:Name="MainBack" 
            Source="backicon3.png" 
            HeightRequest="30" 
            WidthRequest="40" 
            IsVisible="True" 
            Grid.Row="2"
            Grid.RowSpan="1"
            Grid.Column="2"
            Grid.ColumnSpan="1">

            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="BackClicked"/>
            </Image.GestureRecognizers>

        </Image>

        <!-- About Label -->
        <Label x:Name="AboutLabel" Grid.ColumnSpan="4" Grid.RowSpan="1" Grid.Column="8" Grid.Row="2" TextColor="Black" Text="About" FontFamily="monospace" FontSize="25" FontAttributes="Bold" HorizontalTextAlignment="Center"/>

        <!-- About Text -->
        <Label x:Name="MainLabel" Grid.ColumnSpan="14" Grid.RowSpan="34" Grid.Column="3" Grid.Row="5" TextColor="Black" Text="" FontFamily="monospace" FontSize="20" FontAttributes="Bold"/>

    </Grid>
</ContentPage>
