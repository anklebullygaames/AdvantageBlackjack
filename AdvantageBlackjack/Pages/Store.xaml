<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AdvantageBlackjack.Pages"
             x:Class="AdvantageBlackjack.Store"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#707060">

    <Grid>

        <!-- 10 Rows -->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- 5 Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Back Image -->
        <Image x:Name="MainBack" 
            Source="backicon3.png" 
            HeightRequest="30" 
            WidthRequest="40" 
            IsVisible="True" 
            Grid.Row="1"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1">

            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="BackClicked"/>
            </Image.GestureRecognizers>

        </Image>

        <!-- Store Header -->
        <Image x:Name="StoreHeader" Source="storeheader.png" HeightRequest="375" WidthRequest="600" HorizontalOptions="Center" IsVisible="True" Grid.Row="5" Grid.ColumnSpan="22"/>

        <!-- Blank Icon Image -->
        <Image x:Name="BlankIcon" 
            Source="blankusericon.png" 
            HeightRequest="60" 
            WidthRequest="60" 
            IsVisible="True" 
            Grid.Row="9"
            Grid.RowSpan="1"
            Grid.Column="3"
            Grid.ColumnSpan="1">

            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="BlankUserIconClicked"/>
            </Image.GestureRecognizers>

        </Image>

        <!-- Club Icon Image -->
        <Image x:Name="ClubIcon" 
            Source="clubusericon.png" 
            HeightRequest="65" 
            WidthRequest="65" 
            IsVisible="True" 
            Grid.Row="14"
            Grid.RowSpan="1"
            Grid.Column="3"
            Grid.ColumnSpan="1">

            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="ClubUserIconClicked"/>
            </Image.GestureRecognizers>

        </Image>

        <!-- Heart Icon Image -->
        <Image x:Name="HeartIcon" 
            Source="heartusericon.png" 
            HeightRequest="60" 
            WidthRequest="60" 
            IsVisible="True" 
            Grid.Row="14"
            Grid.RowSpan="1"
            Grid.Column="7"
            Grid.ColumnSpan="1">

            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="HeartUserIconClicked"/>
            </Image.GestureRecognizers>

        </Image>

        <!-- Diamond Icon Image -->
        <Image x:Name="DiamondIcon" 
            Source="diamondusericon.png" 
            HeightRequest="60" 
            WidthRequest="60" 
            IsVisible="True" 
            Grid.Row="9"
            Grid.RowSpan="1"
            Grid.Column="7"
            Grid.ColumnSpan="1">

            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="DiamondUserIconClicked"/>
            </Image.GestureRecognizers>

        </Image>

        <!-- Spade Icon Image -->
        <Image x:Name="SpadeIcon" 
            Source="spadeusericon.png" 
            HeightRequest="60" 
            WidthRequest="60" 
            IsVisible="True" 
            Grid.Row="14"
            Grid.RowSpan="1"
            Grid.Column="12"
            Grid.ColumnSpan="1">

            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="SpadeUserIconClicked"/>
            </Image.GestureRecognizers>

        </Image>

        <!-- Alien Icon Image -->
        <Image x:Name="AlienIcon" 
            Source="alienusericon.png" 
            HeightRequest="70" 
            WidthRequest="70" 
            IsVisible="True" 
            Grid.Row="9"
            Grid.RowSpan="1"
            Grid.Column="12"
            Grid.ColumnSpan="1">

            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="AlienUserIconClicked"/>
            </Image.GestureRecognizers>

        </Image>

        <!-- Golden Dice Icon Image -->
        <Image x:Name="GoldenDiceIcon" 
            Source="goldendiceusericon.png" 
            HeightRequest="70" 
            WidthRequest="70" 
            IsVisible="True" 
            Grid.Row="14"
            Grid.RowSpan="1"
            Grid.Column="16"
            Grid.ColumnSpan="1">

            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="GoldenDiceUserIconClicked"/>
            </Image.GestureRecognizers>

        </Image>

        <!-- Dice Icon Image -->
        <Image x:Name="DiceIcon" 
            Source="diceusericon.png" 
            HeightRequest="70" 
            WidthRequest="70" 
            IsVisible="True" 
            Grid.Row="9"
            Grid.RowSpan="1"
            Grid.Column="16"
            Grid.ColumnSpan="1">

            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="DiceUserIconClicked"/>
            </Image.GestureRecognizers>

            

        </Image>

        <!-- AdvantageBlackjack+ Button -->
        <Button
            FontAttributes="Bold"
            FontSize="22"
            FontFamily="monospace"
            x:Name="AdvantageBlackjackPlusBtn"
            Text="Advantage Blackjack+"
            Clicked="SiteClicked"
            HorizontalOptions="Center" 
            BackgroundColor="#00FF1F1F"
            TextColor="Black"
            Grid.Row="24"
            Grid.RowSpan="3"
            Grid.Column="0"
            Grid.ColumnSpan="20"
            BorderColor="Black"
            BorderWidth="6"/>

        <!-- AI Coaching Feature Label -->
        <Label x:Name="AICoachingLabel" Grid.ColumnSpan="20" Grid.RowSpan="2" Grid.Column="0" Grid.Row="29" TextColor="Black" Text="- Unlimited AI Coaching" FontFamily="monospace" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center"/>

        <!-- Unlimited Pairs & Soft Hands Feature Label -->
        <Label x:Name="PairsAndSoftHandsLabel" Grid.ColumnSpan="20" Grid.RowSpan="2" Grid.Column="0" Grid.Row="32" TextColor="Black" Text="- Unlimited Pairs and Soft Hands" FontFamily="monospace" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center"/>

        <!-- All Icons Label -->
        <Label x:Name="UnlockIconsLabel" Grid.ColumnSpan="20" Grid.RowSpan="2" Grid.Column="0" Grid.Row="35" TextColor="Black" Text="- Unlock All Icons" FontFamily="monospace" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center"/>

    </Grid>
</ContentPage>
