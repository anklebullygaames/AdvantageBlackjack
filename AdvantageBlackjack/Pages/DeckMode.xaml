<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdvantageBlackjack.DeckMode"
             BackgroundImageSource="background.jpg"
             NavigationPage.HasNavigationBar="False">

             <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
            <!-- Back Image -->
            <Image x:Name="MainBack" 
                Source="backicon3.png" 
                HeightRequest="25" 
                WidthRequest="40" 
                IsVisible="True" 
                Grid.Row="0"
                Grid.RowSpan="4"
                Grid.Column="3">

                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BackClicked"/>
                </Image.GestureRecognizers>

            </Image>

                <Label
                    Text="Deck Mode"
                    FontFamily="monospace"
                    FontSize="40"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="40"
                    Grid.RowSpan="3"
                    />

                <Label
                    x:Name="TimeLabel"
                    Text="0:00"
                    FontFamily="monospace"
                    FontSize="30"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Grid.Row="6"
                    Grid.Column="4"
                    Grid.ColumnSpan="8"
                    Grid.RowSpan="3"
                    />

                <Label
                    x:Name="AccuracyLabel"
                    Text="95%"
                    FontFamily="monospace"
                    FontSize="30"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Grid.Row="6"
                    Grid.Column="28"
                    Grid.ColumnSpan="8"
                    Grid.RowSpan="3"
                    />

                <Label
                    Text="-1"
                    FontFamily="monospace"
                    FontSize="30"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Grid.Row="31"
                    Grid.Column="3"
                    Grid.ColumnSpan="8"
                    Grid.RowSpan="3"
                    />

                <Image x:Name="LeftArrow"
                ScaleX="-1"
                Source="arrowicon.png" 
                HeightRequest="100" 
                WidthRequest="100" 
                IsVisible="True" 
                Grid.Row="31"
                Grid.RowSpan="10"
                Grid.ColumnSpan="10"
                Grid.Column="3"/>

                <Label
                    Text="0"
                    FontFamily="monospace"
                    FontSize="30"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Grid.Row="31"
                    Grid.Column="15"
                    Grid.ColumnSpan="10"
                    Grid.RowSpan="3"
                    />

                <Image x:Name="DownArrow"
                Rotation="90"
                Source="arrowicon.png" 
                HeightRequest="100" 
                WidthRequest="100" 
                IsVisible="True" 
                Grid.Row="34"
                Grid.RowSpan="10"
                Grid.ColumnSpan="10"
                Grid.Column="15"/>

                <Label
                    Text="+1"
                    FontFamily="monospace"
                    FontSize="30"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Grid.Row="31"
                    Grid.Column="28"
                    Grid.ColumnSpan="10"
                    Grid.RowSpan="3"
                    />

                <Image x:Name="RightArrow" 
                Source="arrowicon.png" 
                HeightRequest="100" 
                WidthRequest="100" 
                IsVisible="True" 
                Grid.Row="31"
                Grid.RowSpan="10"
                Grid.ColumnSpan="10"
                Grid.Column="28"/>
                
             </Grid>

</ContentPage>