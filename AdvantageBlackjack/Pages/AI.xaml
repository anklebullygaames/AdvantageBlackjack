<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AdvantageBlackjack.Pages"
             x:Class="AdvantageBlackjack.AI"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#707060">

    <Grid>

        <!-- 10 Rows -->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- 5 Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Back Image -->
        <Image x:Name="MainBack" 
            Source="backicon3.png" 
            HeightRequest="30" 
            WidthRequest="40" 
            IsVisible="True" 
            Grid.Row="2"
            Grid.RowSpan="1"
            Grid.Column="2"
            Grid.ColumnSpan="1">

            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="BackClicked"/>
            </Image.GestureRecognizers>

        </Image>

        <!-- AI Label -->
        <Label x:Name="AboutLabel" Grid.ColumnSpan="4" Grid.RowSpan="1" Grid.Column="8" Grid.Row="2" TextColor="Black" Text="AI Coach" FontFamily="monospace" FontSize="25" FontAttributes="Bold" HorizontalTextAlignment="Center"/>

        <ScrollView x:Name="ChatView" Grid.Row="4" Grid.RowSpan="26" Grid.Column="0" Grid.ColumnSpan="40">
            <StackLayout x:Name="ChatStack" Grid.Row="4" Grid.Column="0"/>
        </ScrollView>


        <Entry x:Name="UserInput" Placeholder="Tap here to type" Grid.Column="0" Grid.Row="32" Grid.ColumnSpan="30" Grid.RowSpan="2" BackgroundColor="Transparent" TextColor="Black" FontAttributes="Bold" FontFamily="monospace" PlaceholderColor="Black" FontSize="18" HorizontalOptions="Center"/>
        <Button Text="Send" Clicked="SendClicked" Grid.Column="4" Grid.Row="35" Grid.ColumnSpan="12" Grid.RowSpan="2" BackgroundColor="Transparent" BorderColor="Black" BorderWidth="2" TextColor="Black" FontAttributes="Bold" FontFamily="monospace"/>

    </Grid>

</ContentPage>
