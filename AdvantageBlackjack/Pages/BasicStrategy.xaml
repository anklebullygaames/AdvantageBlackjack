<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdvantageBlackjack.BasicStrategy"
             BackgroundImageSource="background.jpg">

    <!-- Main Content Grid -->
    <Grid>

        <!-- 22 Row Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- 22 Column Definitions -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Current Answer Label -->
        <Label x:Name="PairLabel" Grid.ColumnSpan="20" Grid.Column="14" Grid.Row="0" TextColor="Black" Text="0" FontFamily="monospace" FontSize="23" IsVisible="False"/>

        <!-- Current Ace Count Label -->
        <Label x:Name="AceLabel" Grid.ColumnSpan="20" Grid.Column="8" Grid.Row="0" TextColor="Black" Text="0" FontFamily="monospace" FontSize="23" IsVisible="False"/>

        <!-- Current Answer Label -->
        <Label x:Name="AnswerLabel" Grid.ColumnSpan="20" Grid.Column="8" Grid.Row="0" TextColor="Black" Text="0" FontFamily="monospace" FontSize="23" IsVisible="False"/>

        <!-- Percent Correct Label -->
        <Label x:Name="PercentCorrectLabel" Grid.ColumnSpan="20" Grid.Column="2" Grid.Row="2" TextColor="Black" Text="0%" FontFamily="monospace" FontSize="23"/>

        <!-- Fractions Correct Label -->
        <Label x:Name="FractionCorrectLabel" Grid.ColumnSpan="20" Grid.Column="18" Grid.Row="2" TextColor="Black" Text="0/0" FontFamily="monospace" FontSize="23"/>

        <!-- Cards Grid -->
        <Grid x:Name="StrategyGrid" Grid.Row="2" Grid.RowSpan="12" Grid.ColumnSpan="3" Grid.Column="10">

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

        </Grid>

        <!-- Hit Button -->
        <Button Grid.Column="2" Grid.Row="15" Grid.RowSpan="2" Grid.ColumnSpan="8" Text="Hit" Clicked="HitClicked" FontSize="30" BackgroundColor="Transparent" BorderColor="Black" BorderWidth="3" TextColor="Black"/>

        <!-- Stand Button -->
        <Button Grid.Column="2" Grid.Row="18" Grid.RowSpan="2" Grid.ColumnSpan="8" Text="Stand" Clicked="StandClicked" FontSize="30" BackgroundColor="Transparent" BorderColor="Black" BorderWidth="3" TextColor="Black"/>

        <!-- Double Button -->
        <Button Grid.Column="12" Grid.Row="15" Grid.ColumnSpan="8" Grid.RowSpan="2" Text="Double"  FontSize="30" Clicked="DoubleClicked" BackgroundColor="Transparent" BorderColor="Black" BorderWidth="3" TextColor="Black"/>

        <!-- Split Button -->
        <Button Grid.Column="12" Grid.Row="18" Grid.RowSpan="2" Grid.ColumnSpan="8" Text="Split" FontSize="30" Clicked="SplitClicked" BackgroundColor="Transparent" BorderColor="Black" BorderWidth="3" TextColor="Black"/>

    </Grid>

</ContentPage>