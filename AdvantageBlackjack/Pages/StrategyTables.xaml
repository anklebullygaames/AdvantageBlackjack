                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Options Label -->
            <Label x:Name="OptionsLabel" Grid.ColumnSpan="15" Grid.RowSpan="2" Grid.Column="25" Grid.Row="1" TextColor="Black" Text="Options" FontFamily="monospace" FontSize="30" FontAttributes="Bold"/>

            <!-- DAS Label -->
            <Label Text="DAS" 
            FontAttributes="Bold"
            Grid.Column="24" Grid.Row="4"
            TextColor="Black" FontSize="20" Grid.ColumnSpan="20" Grid.RowSpan="10"/>

            <!-- DAS Switch -->
            <Switch x:Name="DoubleAfterSplitSwitch"
            Grid.Column="36" Grid.Row="4"
            Grid.ColumnSpan="3" Grid.RowSpan="1"
            IsToggled="{Binding DoubleAfterSplit}"
            Toggled="DoubleAfterSplitToggled"/>

            <!-- S17 Label -->
            <Label Text="S17" 
            FontAttributes="Bold"
            Grid.Column="24" Grid.Row="7"
            TextColor="Black" FontSize="20" Grid.ColumnSpan="5" Grid.RowSpan="2"/>

            <!-- H17 Label -->
            <Label Text="H17" 
            FontAttributes="Bold"
            Grid.Column="35" Grid.Row="7"
            TextColor="Black" FontSize="20" Grid.ColumnSpan="5" Grid.RowSpan="2"/>

            <!-- H17 Radio Button -->
            <RadioButton x:Name="H17Radio"
            Grid.Column="35" Grid.Row="9"
            Content="H17" GroupName="DealerRuleGroup"
            CheckedChanged="DealerRuleToggled"/>

            <!-- S17 Radio Button -->
            <RadioButton x:Name="S17Radio"
            Grid.Column="24" Grid.Row="9"
            Content="S17" GroupName="DealerRuleGroup"
            CheckedChanged="DealerRuleToggled"/>

            <!-- Back Image -->
            <Image x:Name="StrategyTableOptionsBack" 
            Source="backicon1.png" 
            HeightRequest="40" 
            WidthRequest="40" 
            HorizontalOptions="Center" 
            IsVisible="True" 
            Grid.Row="12"
            Grid.Column="31">

                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OptionsBackClicked"/>
                </Image.GestureRecognizers>

            </Image>



        </Grid>


        <!-- The MainContent Grid -->
        <Grid x:Name="MainContentGrid">

            <!-- 40 Row Definitions -->
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
