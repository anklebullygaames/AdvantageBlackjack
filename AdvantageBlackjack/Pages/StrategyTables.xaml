                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Back Image -->
            <Image x:Name="MainBack" 
                Source="backicon3.png" 
                HeightRequest="30" 
                WidthRequest="40" 
                IsVisible="True" 
                Grid.Row="0"
                Grid.RowSpan="3"
                Grid.Column="0"
                Grid.ColumnSpan="4">

                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BackClicked"/>
                </Image.GestureRecognizers>

            </Image>

            <!-- Header Image -->
            <Image x:Name="StrategyTableHeader" Source="stheader.png" HeightRequest="400" WidthRequest="600" HorizontalOptions="Center" IsVisible="True" Grid.Row="5" Grid.ColumnSpan="41"/>

            <!-- The Tables Grid -->
            <Grid Grid.Row="14" Grid.ColumnSpan="41">
                
                <!-- H17 Hard Totals -->
                <Border x:Name="H17HardTotalsBorder" Stroke="Black" StrokeThickness="5" Padding="2" IsVisible="True" HeightRequest="248" WidthRequest="370">
                    <Image x:Name="H17HardTotalsTable" Source="h17hardstrategy.png" HeightRequest="300" WidthRequest="360" HorizontalOptions="Center"/>
                </Border>

                <!-- H17 Soft Totals -->
                <Border x:Name="H17SoftTotalsBorder" Stroke="Black" StrokeThickness="5" Padding="2" IsVisible="False" HeightRequest="213" WidthRequest="370">
                    <Image x:Name="H17SoftTotalsTable" Source="h17softstrategy.png" HeightRequest="300" WidthRequest="360" HorizontalOptions="Center"/>
                </Border>

                <!-- H17 Pairs Table DAS -->
                <Border x:Name="H17PairsTableDasBorder" Stroke="Black" StrokeThickness="5" Padding="2" IsVisible="False" HeightRequest="253" WidthRequest="366">
                    <Image x:Name="H17PairsTableDas" Source="h17pairstrategydas.png" HeightRequest="300" WidthRequest="360" HorizontalOptions="Center"/>
                </Border>

                <!-- H17 Pairs Table No DAS -->
                <Border x:Name="H17PairsTableNoDasBorder" Stroke="Black" StrokeThickness="5" Padding="2" IsVisible="False" HeightRequest="253" WidthRequest="370">
                    <Image x:Name="H17PairsTableNoDas" Source="h17pairstrategynodas.png" HeightRequest="300" WidthRequest="360" HorizontalOptions="Center"/>
                </Border>

                <!-- S17 Hard Totals -->
                <Border x:Name="S17HardTotalsBorder" Stroke="Black" StrokeThickness="5" Padding="2" IsVisible="False" HeightRequest="255" WidthRequest="370">
                    <Image x:Name="S17HardTotalsTable" Source="s17hardstrategy.png" HeightRequest="300" WidthRequest="360" HorizontalOptions="Center"/>
                </Border>

                <!-- S17 Soft Totals -->
                <Border x:Name="S17SoftTotalsBorder" Stroke="Black" StrokeThickness="5" Padding="2" IsVisible="False" HeightRequest="228" WidthRequest="370">
                    <Image x:Name="S17SoftTotalsTable" Source="s17softstrategy.png" HeightRequest="300" WidthRequest="360" HorizontalOptions="Center"/>
                </Border>

                <!-- S17 Pairs Table DAS -->
                <Border x:Name="S17PairsTableDasBorder" Stroke="Black" StrokeThickness="5" Padding="2" IsVisible="False" HeightRequest="264" WidthRequest="370">
                    <Image x:Name="S17PairsTableDas" Source="s17pairstrategydas.png" HeightRequest="300" WidthRequest="360" HorizontalOptions="Center"/>
                </Border>

                <!-- S17 Pairs Table No DAS -->
                <Border x:Name="S17PairsTableNoDasBorder" Stroke="Black" StrokeThickness="5" Padding="2" IsVisible="False" HeightRequest="263" WidthRequest="369">
                    <Image x:Name="S17PairsTableNoDas" Source="s17pairstrategynodas.png" HeightRequest="300" WidthRequest="360" HorizontalOptions="Center"/>
                </Border>
                
            </Grid>

            <!-- The Hard Totals Button -->
            <Button
            FontAttributes="Bold"
            FontSize="40"
            FontFamily="monospace"
            x:Name="HardTotalsBtn"
            Text="Hard Totals" 
            SemanticProperties.Hint="opens the hard totals strategy table"
            Clicked="HardTotalsClicked"
            VerticalOptions="Fill"
            HorizontalOptions="Fill" 
            BackgroundColor="Transparent"
            TextColor="Black"
            Grid.Row="22"
            Grid.RowSpan="5"
            Grid.ColumnSpan="41"/>

            <!-- The Soft Totals Button -->
            <Button
            FontAttributes="Bold"
            FontSize="40"
            FontFamily="monospace"
            x:Name="SoftTotalsBtn"
            Text="Soft Totals" 
            SemanticProperties.Hint="opens the soft totals strategy table"
            Clicked="SoftHandsClicked"
            VerticalOptions="Fill"
            HorizontalOptions="Fill" 
            BackgroundColor="Transparent"
            TextColor="Black"
            Grid.Row="26"
            Grid.RowSpan="5"
            Grid.ColumnSpan="41"/>

            <!-- The Pairs Button -->
            <Button
            FontAttributes="Bold"
            FontSize="42"
            FontFamily="monospace"
            x:Name="PairsBtn"
            Text="Pairs" 
            SemanticProperties.Hint="opens the pairs strategy table"
            Clicked="PairsClicked"
            VerticalOptions="Fill"
            HorizontalOptions="Fill" 
            BackgroundColor="Transparent"
            TextColor="Black"
            Grid.Row="30"
            Grid.RowSpan="5"
            Grid.ColumnSpan="41"/>

            <!-- The Setting Image -->
            <Image 
            x:Name="SettingsIcon" 
            Source="settingicon2.png" 
            HeightRequest="40" 
            WidthRequest="120" 
            HorizontalOptions="Center" 
            Grid.Row="36"
            Grid.ColumnSpan="41">

                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="SettingsClicked"/>
                </Image.GestureRecognizers>

            </Image>

        </Grid>
    </Grid>

</ContentPage>