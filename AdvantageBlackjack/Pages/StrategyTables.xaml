<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdvantageBlackjack.StrategyTables"
             BackgroundImageSource="background.jpg">

    <Grid>

        <Grid x:Name="MenuGrid">

            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="GridAreaClicked"/>
            </Grid.GestureRecognizers>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label x:Name="OptionsLabel" Grid.ColumnSpan="15" Grid.RowSpan="2" Grid.Column="27" Grid.Row="1" TextColor="Black" Text="Options" FontFamily="monospace" FontSize="30" FontAttributes="Bold"/>

            <RadioButton x:Name="H17Radio"
             Grid.Column="35" Grid.Row="9"
             Content="H17" GroupName="DealerRuleGroup"
             CheckedChanged="DealerRuleToggled"/>

            <RadioButton x:Name="S17Radio"
             Grid.Column="24" Grid.Row="9"
             Content="S17" GroupName="DealerRuleGroup"
             CheckedChanged="DealerRuleToggled"/>
            
            <Label Text="DAS" 
            FontAttributes="Bold"
            Grid.Column="24" Grid.Row="4"
            TextColor="Black" FontSize="20" Grid.ColumnSpan="20" Grid.RowSpan="10"/>

            <Switch x:Name="DoubleAfterSplitSwitch"
            Grid.Column="36" Grid.Row="4"
            Grid.ColumnSpan="3" Grid.RowSpan="1"
            IsToggled="{Binding DoubleAfterSplit}"
            Toggled="DoubleAfterSplitToggled"/>

            <Label Text="S17" 
            FontAttributes="Bold"
            Grid.Column="24" Grid.Row="7"
            TextColor="Black" FontSize="20" Grid.ColumnSpan="5" Grid.RowSpan="2"/>
            
            

            <Label Text="H17" 
            FontAttributes="Bold"
            Grid.Column="35" Grid.Row="7"
            TextColor="Black" FontSize="20" Grid.ColumnSpan="5" Grid.RowSpan="2"/>



        </Grid>
        
        

        <Grid x:Name="MainContentGrid">

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Image x:Name="StrategyTableHeader" Source="stheader.png" HeightRequest="100" WidthRequest="400" HorizontalOptions="Center" IsVisible="True" Grid.Row="1"/>

            <Grid Grid.Row="6">
                <Image x:Name="HardTotalsTable" Source="h17hardstrategy.png" HeightRequest="300" WidthRequest="360" HorizontalOptions="Center" IsVisible="True" Grid.Row="1"/>
                <Image x:Name="SoftTotalsTable" Source="h17softstrategy.png" HeightRequest="300" WidthRequest="360" HorizontalOptions="Center" IsVisible="False" Grid.Row="1"/>
                <Image x:Name="PairsTable" Source="h17pairstrategydas.png" HeightRequest="300" WidthRequest="360" HorizontalOptions="Center" IsVisible="False" Grid.Row="1"/>
            </Grid>

            <Button
            FontAttributes="Bold"
            FontSize="40"
            FontFamily="monospace"
            x:Name="HardTotalsBtn"
            Text="Hard Totals" 
            SemanticProperties.Hint="opens the hard totals strategy table"
            Clicked="HardTotalsClicked"
            VerticalOptions="Fill"
            HorizontalOptions="Fill" 
            BackgroundColor="Transparent"
            TextColor="Black"
            Grid.Row="10"
            Grid.RowSpan="2"/>

            <Button
            FontAttributes="Bold"
            FontSize="40"
            FontFamily="monospace"
            x:Name="SoftTotalsBtn"
            Text="Soft Totals" 
            SemanticProperties.Hint="opens the soft totals strategy table"
            Clicked="SoftHandsClicked"
            VerticalOptions="Fill"
            HorizontalOptions="Fill" 
            BackgroundColor="Transparent"
            TextColor="Black"
            Grid.Row="12"
            Grid.RowSpan="2"/>

            <Button
            FontAttributes="Bold"
            FontSize="42"
            FontFamily="monospace"
            x:Name="PairsBtn"
            Text="Pairs" 
            SemanticProperties.Hint="opens the pairs strategy table"
            Clicked="PairsClicked"
            VerticalOptions="Fill"
            HorizontalOptions="Fill" 
            BackgroundColor="Transparent"
            TextColor="Black"
            Grid.Row="14"
            Grid.RowSpan="2"/>

            <Image 
            x:Name="SettingsIcon" 
            Source="settingicon2.png" 
            HeightRequest="40" 
            WidthRequest="120" 
            HorizontalOptions="Center" 
            Grid.Row="17">

                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="SettingsClicked"/>
                </Image.GestureRecognizers>

            </Image>

        </Grid>
    </Grid>

</ContentPage>