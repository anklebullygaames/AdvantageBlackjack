                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Username Label -->
            <Label x:Name="UsernameLabel" Grid.ColumnSpan="15" Grid.RowSpan="2" Grid.Column="4" Grid.Row="4" TextColor="#707060" Text="isaiahgavin13" FontFamily="monospace" FontSize="20" FontAttributes="Bold"/>

            <!-- The Diamonds Image -->
            <Image
                x:Name="DiamondImage"
                Source="diamond.png"
                HeightRequest="15"
                Grid.Row="6"
                Grid.Column="3"
                Grid.ColumnSpan="3"/>

            <!-- Diamonds Label -->
            <Label x:Name="DiamondsLabel" Grid.ColumnSpan="12" Grid.RowSpan="1" Grid.Column="6" Grid.Row="6" TextColor="#707060" Text="0" FontFamily="monospace" FontSize="20" FontAttributes="Bold"/>

            <!-- Records Button -->
            <Button
                FontAttributes="Bold"
                FontSize="22"
                FontFamily="monospace"
                x:Name="RecordsBtn"
                Text="Records"
                Clicked="RecordsClicked"
                HorizontalOptions="Center" 
                BackgroundColor="Transparent"
                TextColor="Black"
                Grid.Row="8"
                Grid.RowSpan="1"
                Grid.Column="2"
                Grid.ColumnSpan="12"/>

            <!-- Stats Button -->
            <Button
                FontAttributes="Bold"
                FontSize="22"
                FontFamily="monospace"
                x:Name="StatsBtn"
                Text="Statistics"
                Clicked="StatsClicked"
                HorizontalOptions="Center" 
                BackgroundColor="Transparent"
                TextColor="Black"
                Grid.Row="10"
                Grid.RowSpan="1"
                Grid.Column="2"
                Grid.ColumnSpan="13"/>


            <!-- Last 10 Missed Button -->
            <Button
                FontAttributes="Bold"
                FontSize="22"
                FontFamily="monospace"
                x:Name="MissedBtn"
                Text="Last 10 Missed"
                Clicked="MissedClicked"
                HorizontalOptions="Center" 
                BackgroundColor="Transparent"
                TextColor="Black"
                Grid.Row="12"
                Grid.RowSpan="1"
                Grid.Column="2"
                Grid.ColumnSpan="18"/>

            <!-- AI Button -->
            <Button
                FontAttributes="Bold"
                FontSize="22"
                FontFamily="monospace"
                x:Name="AIBtn"
                Text="AI Coach"
                Clicked="AIClicked"
                HorizontalOptions="Center" 
                BackgroundColor="Transparent"
                TextColor="Black"
                Grid.Row="14"
                Grid.RowSpan="1"
                Grid.Column="2"
                Grid.ColumnSpan="12"/>

            <!-- About Button -->
            <Button
                FontAttributes="Bold"
                FontSize="22"
                FontFamily="monospace"
                x:Name="AboutBtn"
                Text="About"
                Clicked="AboutClicked"
                HorizontalOptions="Center" 
                BackgroundColor="Transparent"
                TextColor="Black"
                Grid.Row="16"
                Grid.RowSpan="1"
                Grid.Column="2"
                Grid.ColumnSpan="9"/>

            <!-- SignIn Button -->
            <Button
                FontAttributes="Bold"
                FontSize="22"
                FontFamily="monospace"
                x:Name="SignInBtn"
                Text="Sign In"
                Clicked="SignInClicked"
                HorizontalOptions="Center" 
                BackgroundColor="Transparent"
                TextColor="Black"
                Grid.Row="18"
                Grid.RowSpan="1"
                Grid.Column="2"
                Grid.ColumnSpan="10"/>

            <!-- Back Image -->
            <Image x:Name="OptionsBack" 
            Source="backicon1.png" 
            HeightRequest="30" 
            WidthRequest="40" 
            HorizontalOptions="Center" 
            IsVisible="True" 
            Grid.Row="20"
            Grid.Column="5">

                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OptionsBackClicked"/>
                </Image.GestureRecognizers>

            </Image>



        </Grid>

        <!-- The MainContent -->
        <Grid x:Name="MainContentGrid">
            
            <!-- 40 Row Definitions -->
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
