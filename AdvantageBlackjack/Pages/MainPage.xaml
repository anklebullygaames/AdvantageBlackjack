                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- The User Image -->
            <Image
                x:Name="UserImage"
                Source="blankusericon.png"
                HeightRequest="50"
                WidthRequest="50"
                Margin="0,4"
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="1"
                Grid.ColumnSpan="3">
                
                <Image.Clip>
                    <EllipseGeometry Center="25,25" RadiusX="22" RadiusY="22" />
                </Image.Clip>

                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="MenuClicked"/>
                </Image.GestureRecognizers>
            </Image>




            <!-- The Logo Image -->
            <Image
                x:Name="LogoImage"
                Source="thereallogo.png"
                HeightRequest="350"
                Grid.Row="11"
                Grid.ColumnSpan="18"/>

            <!-- Basic Strategy Strategy Subheader -->
            <Label
                FontAttributes="Bold"
                x:Name="Subheader"
                Text="Learn Basic Strategy"
                FontFamily="monospace"
                FontSize="24"
                HorizontalOptions="Center"
                TextColor="Black"
                Grid.Row="21"
                Grid.Column="2"
                Grid.RowSpan="40"
                Grid.ColumnSpan="14"/>

            <!-- All Hands Button -->
            <Button
                FontAttributes="Bold"
                FontSize="22"
                FontFamily="monospace"
                x:Name="BasicStrategyBtn"
                Text="All Hands" 
                Clicked="BasicStrategyClicked"
                HorizontalOptions="Center" 
                BackgroundColor="Transparent"
                TextColor="Black"
                Grid.Row="23"
                Grid.RowSpan="3"
                Grid.Column="6"
                Grid.ColumnSpan="6"/>

            <!-- The Pairs and Soft Hands button -->
            <Button
                FontAttributes="Bold"
                FontSize="22"
                FontFamily="monospace"
                x:Name="PairsAndSoftHandsBtn"
                Text="Pairs and Soft Hands" 
                Clicked="PairsAndSoftHandsClicked"
                HorizontalOptions="Center" 
                BackgroundColor="Transparent"
                TextColor="Black"
                Grid.Row="26"
                Grid.RowSpan="3"
                Grid.Column="3"
                Grid.ColumnSpan="12"/>

            <!-- The Strategy Tables Button -->
            <Button
                FontAttributes="Bold"
                FontSize="22"
                FontFamily="monospace"
                x:Name="StrategyTableBtn"
                Text="Strategy Tables" 
                Clicked="StrategyTableClicked"
                HorizontalOptions="Center"
                BackgroundColor="Transparent"
                TextColor="Black"
                Grid.Row="29"
                Grid.RowSpan="3"
                Grid.Column="4"
                Grid.ColumnSpan="10"/>

            <!-- The Counting Label -->
            <Label
                FontAttributes="Bold"
                FontSize="24"
                FontFamily="monospace"
                x:Name="CountingLabel"
                Text="Master Card Counting" 
                HorizontalOptions="Center" 
                BackgroundColor="Transparent"
                TextColor="Black"
                Grid.Row="33"
                Grid.RowSpan="3"
                Grid.Column="3"
                Grid.ColumnSpan="12"/>

            <!-- Deck Mode Button -->
            <Button
                x:Name="DeckModeBtn"
                Text="Deck Mode"
                Clicked="DeckModeClicked"
                Grid.Row="35"
                Grid.RowSpan="3"
                Grid.Column="0"
                Grid.ColumnSpan="8"
                FontSize="22"
                FontFamily="monospace"
                BackgroundColor="Transparent"
                TextColor="Black"
                HorizontalOptions="Center"
                TranslationX="-1000"
                IsVisible="True" />

                <!-- Deal Mode Button -->
                <Button
                    x:Name="DealModeBtn"
                    Text="Deal Mode"
                    Clicked="DealModeClicked"
                    Grid.Row="35"
                    Grid.RowSpan="3"
                    Grid.Column="11"
                    Grid.ColumnSpan="6"
                    FontSize="22" 
                    FontFamily="monospace"
                    BackgroundColor="Transparent"
                    TextColor="Black"
                    HorizontalOptions="Center"
                    TranslationX="1000"
                    IsVisible="True" />

                <!-- Deck Image -->
                <Image
                    x:Name="DeckModeImage"
                    Source="deckicon.png"
                    HeightRequest="50"
                    WidthRequest="90"
                    Grid.Row="38"
                    Grid.RowSpan="1"
                    Grid.Column="3"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Center"
                    IsVisible="True">

                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="DeckModeClicked"/>
                    </Image.GestureRecognizers>
                </Image>

                <!-- Deal Image -->
                <Image
                    x:Name="DealModeImage"
                    Source="eyeicon.png"
                    HeightRequest="70"
                    WidthRequest="90"
                    Grid.Row="38"
                    Grid.RowSpan="1"
                    Grid.Column="13"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Center"
                    IsVisible="True">

                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="DealModeClicked"/>
                    </Image.GestureRecognizers>

                </Image>

        </Grid>

    </Grid>

</ContentPage>
