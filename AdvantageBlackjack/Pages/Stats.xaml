<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AdvantageBlackjack.Pages"
             x:Class="AdvantageBlackjack.Stats"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#707060">

    <Grid>

        <!-- 10 Rows -->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- 5 Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Back Image -->
        <Image x:Name="MainBack" 
            Source="backicon3.png" 
            HeightRequest="30" 
            WidthRequest="40" 
            IsVisible="True" 
            Grid.Row="1"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1">

            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="BackClicked"/>
            </Image.GestureRecognizers>

        </Image>

        <!-- Stats Header -->
        <Image x:Name="StatsHeader" Source="statsheader.png" HeightRequest="370" WidthRequest="600" HorizontalOptions="Center" IsVisible="True" Grid.Row="4" Grid.ColumnSpan="22"/>

        <Label x:Name="BasicStrategyLabel" Grid.ColumnSpan="20" Grid.RowSpan="1" Grid.Column="0" Grid.Row="8" TextColor="Black" Text="Basic Strategy" FontFamily="monospace" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center"/>

        <Label x:Name="CorrectPlaysLabel" HorizontalTextAlignment="Center" Grid.ColumnSpan="20" Grid.RowSpan="1" Grid.Row="11" FontSize="18" TextColor="Black" FontFamily="monospace" />

        <Label x:Name="IncorrectPlaysLabel" HorizontalTextAlignment="Center" Grid.ColumnSpan="20" Grid.RowSpan="1" Grid.Row="14" FontSize="18" TextColor="Black" FontFamily="monospace" />

        <Label x:Name="PlayPercentLabel" Grid.ColumnSpan="20" Grid.RowSpan="1" Grid.Column="0" Grid.Row="17" TextColor="Black" Text="0%" FontFamily="monospace" FontSize="18" HorizontalTextAlignment="Center"/>

        <Label x:Name="CardCountingLabel" Grid.ColumnSpan="20" Grid.RowSpan="1" Grid.Column="0" Grid.Row="21" TextColor="Black" Text="Card Counting" FontFamily="monospace" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center"/>

        <Label x:Name="CorrectPromptsLabel" HorizontalTextAlignment="Center" Grid.ColumnSpan="20" Grid.RowSpan="1" Grid.Row="24" FontSize="18" TextColor="Black" FontFamily="monospace" />

        <Label x:Name="IncorrectPromptsLabel" HorizontalTextAlignment="Center" Grid.ColumnSpan="20" Grid.RowSpan="1" Grid.Row="27" FontSize="18" TextColor="Black" FontFamily="monospace" />

        <Label x:Name="CorrectSwipesLabel" HorizontalTextAlignment="Center" Grid.ColumnSpan="20" Grid.RowSpan="1" Grid.Row="30" FontSize="18" TextColor="Black" FontFamily="monospace" />

        <Label x:Name="IncorrectSwipesLabel" HorizontalTextAlignment="Center" Grid.ColumnSpan="20" Grid.RowSpan="1" Grid.Row="33" FontSize="18" TextColor="Black" FontFamily="monospace" />

        <Label x:Name="BestTimeLabel" HorizontalTextAlignment="Center" Grid.ColumnSpan="20" Grid.RowSpan="1" Grid.Row="36" FontSize="18" TextColor="Black" FontFamily="monospace" />

    </Grid>
</ContentPage>
